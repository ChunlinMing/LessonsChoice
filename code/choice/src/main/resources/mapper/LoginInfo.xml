<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mcl.bysj.dao.LoginInfoDao">
    <parameterMap id="LoginInfo" type="com.mcl.bysj.entity.LoginInfo"/>
    <resultMap id="loginInfoObj" type="LoginInfo">
        <result property="userId" column="USER_ID"/>
        <result property="userPwd" column="USER_PWD"/>
        <result property="userType" column="USER_TYPE"/>
    </resultMap>

    <select id="findUserType" resultType="java.lang.Integer" parameterMap="LoginInfo">
        SELECT USER_TYPE FROM cqupt_login_info WHERE USER_ID = #{userId} and USER_PWD = #{userPwd}
    </select>

    <select id="findUserById" resultMap="loginInfoObj" parameterMap="LoginInfo">
        SELECT * FROM cqupt_login_info WHERE USER_ID = #{userId}
    </select>

    <insert id="insertUser" parameterMap="LoginInfo">
        INSERT INTO cqupt_login_info (USER_ID, USER_PWD, USER_TYPE)
        VALUES (#{userId}, #{userPwd}, #{userType})
    </insert>

    <update id="updateUser" parameterMap="LoginInfo">
        update cqupt_login_info
        set USER_PWD = #{userPwd}
        where USER_ID = #{userId}
    </update>
</mapper>